@model Kereste.DATA.Entities.User
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("~/Views/partials/_AdminLeftMenu.cshtml")

   <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Profilim </h3>
            </div>
            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <p class="card-description"> Kişisel bilgilerini buradan düzenleyebilirsin. </p>
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Ad-Soyad</label>
                        <input type="text" class="form-control" value="@Model.NameSurname" id="exampleInputName1" placeholder="Ad-Soyad">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Kullanıcı Adı</label>
                            <input type="text" class="form-control" value="@Model.Username" id="exampleInputEmail3" placeholder="Kullanıcı Adı">
                      </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Email</label>
                            <input type="text" class="form-control" value="@Model.Email" id="exampleInputEmail3" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword4">Şifre</label>
                            <div class="input-group">
                                <input type="password" class="form-control" value="@Model.Password" id="exampleInputPassword4" placeholder="Şifre">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <input type="checkbox" id="showPassword" onclick="togglePassword()"> Göster
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Fotoğraf</label>
                            <input type="file" name="img[]" class="file-upload-default">
                            <div class="input-group col-xs-6">
                                <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Seç">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Yükle</button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mevcut Fotoğraf</label>
                            <img src="https://ahmetselcukozdemir.github.io/images/turkmedya8.jpeg" alt="Mevcut Fotoğraf" class="img-thumbnail" id="currentImage" style="max-width: 300px;">
                        </div>
                      <div class="form-group">
                        <label for="exampleInputCity1">Doğum Tarihi</label>
                        <input type="text" class="form-control" id="exampleInputCity1" placeholder="Location">
                      </div>
                      <button type="submit" class="btn btn-gradient-primary me-2">Kaydet</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>

<script>
    function togglePassword() {
        var passwordInput = document.getElementById('exampleInputPassword4');
        var checkbox = document.getElementById('showPassword');

        if (checkbox.checked) {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    }

    document.querySelector('input[type="file"]').addEventListener('change', function (event) {
        var input = event.target;
        var fileName = input.files[0].name;

        // Seçilen dosya adını gösteren input alanını güncelle
        input.parentElement.querySelector('.file-upload-info').value = fileName;

        // Mevcut fotoğrafı gösteren img etiketini güncelle
        var currentImage = document.getElementById('currentImage');
        currentImage.src = URL.createObjectURL(input.files[0]);
    });
</script>
