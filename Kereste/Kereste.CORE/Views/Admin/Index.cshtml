@model Kereste.CORE.Models.Admin.HomeModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <!-- partial:partials/_sidebar.html -->
    @Html.Partial("~/Views/partials/_AdminLeftMenu.cshtml")
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">
                    <span class="page-title-icon bg-gradient-primary text-white me-2">
                        <i class="mdi mdi-home"></i>
                    </span> Panelim
                </h3>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">
                            <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="row">
                <div class="col-md-4 stretch-card grid-margin">
                    <div class="card bg-gradient-danger card-img-holder text-white">
                        <div class="card-body">
                            <img src="~/admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                            <h4 class="font-weight-normal mb-3">
                                Toplam Yazı <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                            </h4>
                            <h2 class="mb-5">@Model.NewsCount</h2>
                          @*   <h6 class="card-text">Increased by 60%</h6> *@
                        </div>
                    </div>
                </div>
                <div class="col-md-4 stretch-card grid-margin">
                    <div class="card bg-gradient-info card-img-holder text-white">
                        <div class="card-body">
                            <img src="~/admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                            <h4 class="font-weight-normal mb-3">
                                Aktif Kullanıcı <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                            </h4>
                            <h2 class="mb-5">@Model.UserCount<h2>
                          @*   <h6 class="card-text">Decreased by 10%</h6> *@
                        </div>
                    </div>
                </div>
                <div class="col-md-4 stretch-card grid-margin">
                    <div class="card bg-gradient-success card-img-holder text-white">
                        <div class="card-body">
                            <img src="~/admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                            <h4 class="font-weight-normal mb-3">
                                Aktif Kategori <i class="mdi mdi-diamond mdi-24px float-right"></i>
                            </h4>
                            <h2 class="mb-5">@Model.CategoryCount</h2>
                          @*   <h6 class="card-text">Increased by 5%</h6> *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Son Yazılar</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th> # </th>
                                            <th> Yazar </th>
                                            <th> Başlık </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.LastNewsList)
                                    {
                                        <tr>
                                            <td> @item.NewsID </td>
                                            <td> @item.User.NameSurname </td>
                                            <td> @item.Title </td>
                                        </tr>
                                    }
                                       
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Son Kategoriler</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th> # </th>
                                            <th> Ad </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.LastCategoryList)
                                    {
                                        <tr>
                                            <td> @item.categoryID </td>
                                            <td> @item.categoryName </td>
                                        </tr>
                                    }
                                       
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Son Kullanıcılar</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th> # </th>
                                        <th> Ad </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.LastUserList)
                                    {
                                        <tr>
                                            <td> @item.userID </td>
                                            <td> @item.nameSurname </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
                <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">@DateTime.Now</span>
            <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Bu panel ve websitesi <a href="https://ahmetselcukozdemir.github.io/" target="_blank">ahmet selçuk özdemir</a> tarafından geliştirilmektedir.</span>
            </div>
        </footer>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
